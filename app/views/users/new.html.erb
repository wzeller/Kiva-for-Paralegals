
<style>

body{
  background-color: #f7f7f2;
}

.btn-primary{
  background: orange;
}

h3{
  color: #4b9123;
  font-family: 'Proxima Nova Regular', 'Helvetica Neue', Arial, Helvetica, sans-serif;
  font-size: 1.4286em;
  font-size-adjust: 0.488;
  font-weight: 400;
}

div{
  color: #333;
}

.col-md-4{
 border-radius: 10px;
 border: 1px solid gray;
 background: white;
}

#subscript{
  font-size: .75em;
}

label{
  font-family: 'Proxima Nova Regular', 'Helvetica Neue', Arial, Helvetica, sans-serif;
  font-size: 1em;
  font-size-adjust: 0.488;
  font-weight: 400;
}

.password-field{
  margin-bottom: 10px;
}

.row{
  margin-top: 100px;
}


</style>

<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4"> 
      <%= render "layouts/errors" %>
      Already a member? <a href="<%= new_session_url %>">Sign in</a><br>
      <h3>Sign up</h3><div id="subscript">* required fields </div>
        <form action="<%= users_url %>" method="post">
          <%= auth_token_input %>
          <label>
            First Name *<br>
            <input type="text" name="user[fname]" value="<%= @user.fname %>">
          </label>
          <br>
          <label>
            Last Name *<br>
            <input type="text" name="user[lname]" value="<%= @user.lname %>">
          </label>
          <br>
          <label>
            Email *<br>
            <input type="text" name="user[email]" value="<%= @user.email %>">
          </label>
          <br>
          <label>
            Password *<br>
            <input class="password-field" type="password" name="user[password]">
          </label>
          <br>
          <input type="submit" class="btn btn-primary" value="Register">
        </form>
      </div>
    </div>
</div>
