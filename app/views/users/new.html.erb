
<style>

.btn{
  background: orange
}
</style>

<div class="container">
  <%= render "layouts/errors" %>
  
  <h1>Sign up</h1>
    <form action="<%= users_url %>" method="post">
      <%= auth_token_input %>
      <label>
        First Name<br>
        <input type="text" name="user[fname]">
      </label>
      <br>
      <label>
        Last Name<br>
        <input type="text" name="user[lname]">
      </label>
      <br>
      <label>
        Email<br>
        <input type="text" name="user[email]">
      </label>
      <br>
      <label>
        Password<br>
        <input type="password" name="user[password]">
      </label>
      <br>
      <input type="submit" class="btn btn-primary" value="Sign Up">
    </form>
</div>
