
<style>

body{
  background-color: #f7f7f2;
}

.btn-primary{
  background: orange;
}

h3{
  color: #4b9123;
  font-family: 'Proxima Nova Regular', 'Helvetica Neue', Arial, Helvetica, sans-serif;
  font-size: 1.4286em;
  font-size-adjust: 0.488;
  font-weight: 400;
}

div{
  color: #333;
}

.col-md-4{
 border-radius: 10px;
 border: 1px solid gray;
 background: white;
}

#subscript{
  font-size: .75em;
}

label{
  font-family: 'Proxima Nova Regular', 'Helvetica Neue', Arial, Helvetica, sans-serif;
  font-size: 1em;
  font-size-adjust: 0.488;
  font-weight: 400;
}

.password-field{
  margin-bottom: 10px;
}

.row{
  margin-top: 100px;
}

#sign-up-box{
  -webkit-box-shadow: 0px -2px 8px -4px #888, 1px 1px 4px #ccc;
  box-shadow: 0px -2px 8px -4px #888, 1px 1px 4px #ccc;
  border: #ccc 1px solid;
}

#avatar-form{
  margin-bottom: 10px;
}

</style>

<div class="container">
  <div class="row">
    <div id="sign-up-box" class="col-md-4 col-md-offset-4"> 
      <%= render "layouts/errors" %>
      <h3>Create a team!</h3><div id="subscript">* required fields </div>
      <%= form_for @team, :url => teams_path, :html => { :multipart => true } do |form| %>
        <%= form.label :name, "Name*"%><br>
        <%= form.text_field :name %>
        <br>
        <%= form.label :avatar, "Team picture*"%>
        <div id="avatar-form">
          <%= form.file_field :avatar %>
        </div>
        <%= form.submit :create, value: "Create Team", class: "btn btn-primary" %>
      <% end %>

      </div>
    </div>
</div>
