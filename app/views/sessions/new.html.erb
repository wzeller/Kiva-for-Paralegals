<style>

body{
  background-color: #f7f7f2;
}

.btn-primary{
  background: orange;
}

h3{
  color: #4b9123;
  font-family: 'Proxima Nova Regular', 'Helvetica Neue', Arial, Helvetica, sans-serif;
  font-size: 1.4286em;
  font-size-adjust: 0.488;
  font-weight: 400;
}

div{
  color: #333;
}

.col-md-4{
 border-radius: 10px;
 border: 1px solid gray;
 background: white;
}

#subscript{
  font-size: .75em;
}

label{
  font-family: 'Proxima Nova Regular', 'Helvetica Neue', Arial, Helvetica, sans-serif;
  font-size: 1em;
  font-size-adjust: 0.488;
  font-weight: 400;
}

#guest{
  float: right;
}

.password-field{
  margin-bottom: 10px;
}

.row{
  margin-top: 100px;
}

#sign-in-box{
  -webkit-box-shadow: 0px -2px 8px -4px #888, 1px 1px 4px #ccc;
  box-shadow: 0px -2px 8px -4px #888, 1px 1px 4px #ccc;
  border: #ccc 1px solid;
}

</style>

<div class="container">
  <div class="row">
    <div id="sign-in-box" class="col-md-4 col-md-offset-4"> 
      <%= render "layouts/errors" %>
      New to Kiva for Paralegals? <a href="<%= new_user_url %>">Register</a><br>
      <h3>Sign in using our form</h3>
        <form action="<%= session_url %>" method="post">
          <%= auth_token_input %>
          <label>
            Email<br>
            <input type="text" name="user[email]">
          </label>
          <br>
          <label>
            Password<br>
            <input class="password-field" type="password" name="user[password]">
          </label>
          <br>
          <input type="submit" class="btn btn-primary" value="Login">
          <input type="submit" id="guest" class="btn btn-primary" name="user[name]" value="Login as guest">
        </form>         
      </div>
    </div>
</div>


