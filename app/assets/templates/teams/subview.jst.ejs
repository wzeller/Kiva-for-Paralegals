 <style>

  #team-view {
    border-bottom: #ccc 1px dotted;
    padding-bottom: 10px;
    border-left: #ccc 1px solid;
    background-color: white;
  }

  #bio{
    height: 15%;
  }

  #blurb{
    padding: 7px 0;
    padding-bottom: 24px; 
  }

  .img-responsive{
    border: 1px solid #ccc;
    padding: 7px;
    margin-left: auto;
    margin-right: auto;
    margin-top: 10px;
    min-height: 100px;
    max-height: 150px; 
  }

  #teamName {
    color: #197099;
    text-decoration: none;
    font-family: 'Proxima Nova Regular', 'Helvetica Neue', Arial, Helvetica, sans-serif;
    font-size: 1.3em;
    font-size-adjust: 0.488;
    font-weight: 400;
    margin-bottom: 3px;
    margin-top: 10px;
  }

  #country{
    font-size: .8571em;
    color: #333;
    font: .875em/1.357 arial, helvetica, sans-serif;
    font-weight: bold;
    padding-bottom: 5px;
  }

  #join-button{
    background-color: orange;
  }

  .join{
    color: #333;
    margin-top: 50px;
    font: .875em/1.357 arial, helvetica, sans-serif;
    font-weight: 500;
    height: 15%;
  }

  #percent-raised{
    font-size: 2.5714em;
  }

  .progress{
    width: 50%;
  }
  
  .alert{
    margin-top:10px;
    width: 50%;
  }

</style>

<div id="content" class="container-liquid">
  <div>
    <div class="row" id="team-view">
      
      <div class="col-md-4" id="photo">
        <div id="img-container">
          <% var thumb= team.get("avatar").replace("original", "thumb") %>
          <img class="img-responsive" src=<%= team.get("avatar") %>>
        </div>
      </div>

      <div class="col-md-4" id="bio">
        <a href=<%= "#/teams/" + team.get("id") %>>
          <h1 id="teamName"><%=team.escape("name")%></h1>
        </a>
        <div id="blurb">Join the folks at <%= team.escape("name")%> and their fight for justice.</div><br>
        <a id="read-more" href=<%= "#/teams/" + team.get("id") %>>
        Read more about them.
        </a>
      </div>
      
     
      <div class="col-md-4 join">
     
        <input type="submit" id="join-button" class="btn btn-primary btn-sm" value="Join this team!">
      </div>
     

    </div>
  </div>
</div>
