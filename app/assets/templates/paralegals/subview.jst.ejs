 <style>

  #paralegal-view {
    border-bottom: #ccc 1px dotted;
    padding-bottom: 10px;
    border-left: #ccc 1px solid;
    background-color: white;
  }

  #bio{
    height: 15%;
  }

  #blurb{
    padding: 7px 0;
    padding-bottom: 24px; 
  }

  .img-responsive{
    border: 1px solid #ccc;
    padding: 7px;
    margin-left: auto;
    margin-right: auto;
    margin-top: 10px;
    min-height: 200px;
    max-height: 250px; 
  }

  #paralegalName {
    color: #197099;
    text-decoration: none;
    font-family: 'Proxima Nova Regular', 'Helvetica Neue', Arial, Helvetica, sans-serif;
    font-size: 1.3em;
    font-size-adjust: 0.488;
    font-weight: 400;
    margin-bottom: 3px;
  }

  #country{
    font-size: .8571em;
    color: #333;
    font: .875em/1.357 arial, helvetica, sans-serif;
    font-weight: bold;
    padding-bottom: 5px;
  }

  #donate-button{
    background-color: orange;
  }

  .fundraising{
    color: #333;
    margin-top: 15px;
    font: .875em/1.357 arial, helvetica, sans-serif;
    font-weight: 500;
    height: 15%;
  }

  #percent-raised{
    font-size: 2.5714em;
  }

  .progress{
    width: 50%;
  }
  
  .alert{
    margin-top:10px;
    width: 50%;
  }

</style>

<div id="content" class="container-liquid">
  <div>
    <div class="row" id="paralegal-view">
      <div class="col-md-4" id="photo">
        <div id="img-container">
          <img class="img-responsive" src=<%= paralegal.get("avatar_file_name") %>>
        </div>
      </div>

      <div class="col-md-4" id="bio">
        <a href=<%= "#/paralegals/" + paralegal.get("id") %>>
          <h1 id="paralegalName"><%=paralegal.escape("name")%></h1>
        </a>
        <div id="country"><%= paralegal.escape("country") %></div>
        <div id="blurb">A donation can help <%= paralegal.escape("name")%> fight for justice.</div>
        <a href=<%= "#/paralegals/" + paralegal.get("id") %>>
        Read their story.
        </a>
      </div>
      
      <% if (1000 - (Math.floor(paralegal.escape("money"))) > 0){ %>
        <div class="col-md-4 fundraising" id="<%="fundraising" + paralegal.get("id")%>">
          <span id="percent-raised"><%=(Math.floor(paralegal.escape("money")/10)) + "%"%></span><span id="amount-to-go"> raised, $<%= 1000- paralegal.escape("money")%> left to go.</span>

          <div class="progress">
            <div id="progress-bar" class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: <%=(Math.floor(paralegal.escape("money")/10)) + "%"%>;"><span class="sr-only">40% Complete (success)</span></div>
          </div>
          <input type="submit" id="donate-button" class="btn btn-primary btn-sm" name="user[name]" value="Donate $25">
        </div>
      <%} else {%>

       <div class="col-md-4 fundraising" id="<%="fundraising" + paralegal.get("id")%>">
          <span id="percent-raised">100%</span><span id="amount-to-go"> raised, thanks to all of you!</span>
          <div class="progress">
            <div id="progress-bar" class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: 100%"><span>Fully funded!</span></div>
          </div>
      </div>
      <%}%>

    </div>
  </div>
</div>
